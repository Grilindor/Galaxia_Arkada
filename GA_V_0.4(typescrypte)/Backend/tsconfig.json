{
	"compilerOptions": {
	  "target": "ES6",
	  "module": "commonjs",
	  "outDir": "./app/dist",
	  "rootDir": "./app",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "allowJs": true, // autorise importation type .js
	},
	"include": [
	  "app/**/*.ts",
	  "app/**/*.js"
	],
	"exclude": [
	  "app/dist",
	  "node_modules"
	]
  }
